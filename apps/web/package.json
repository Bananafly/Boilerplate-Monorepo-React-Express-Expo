{
  "name": "@monorepo/web",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build --base=/",
    "preview": "vite preview",
    "test": "vitest",
    "test-e2e": "pm2 start \"npm run run-mock-server\" --name server && npx playwright test",
    "prepare": "husky",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx --cache",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix --cache",
    "check-types": "tsc --project tsconfig.json --pretty --noEmit",
    "generate": "plop",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "run-mock-server": "vite-node mock-server.ts | pino-pretty -c"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.31.2",
    "@radix-ui/react-slot": "^1.2.2",
    "@tanstack/react-query": "^5.75.7",
    "@tanstack/react-query-devtools": "^5.75.7",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.56.3",
    "react-router-dom": "^7.6.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitejs/plugin-react": "^4.4.1",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "pino-pretty": "^13.0.0",
    "plop": "^4.0.1",
    "pm2": "^6.0.5",
    "storybook": "^8.6.12",
    "tailwindcss": "^4.1.6",
    "vite": "^6.3.5",
    "vite-node": "^3.1.3",
    "vite-tsconfig-paths": "^5.1.4",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "npm run lint",
      "bash -c 'npm run check-types'"
    ]
  },
  "lint-staged-backup": {
    "*.+(js|jsx|ts|tsx)": [
      "npm run lint",
      "bash -c 'npm run check-types'"
    ]
  }
}
