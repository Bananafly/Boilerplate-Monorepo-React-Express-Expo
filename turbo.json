{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": [],
      "cache": false,
      "inputs": [
        ".eslintrc*",
        "**/.eslintrc*",
        "**/src/**/*.{ts,tsx,js,jsx}",
        "*.{js,ts,jsx,tsx}"
      ]
    },
    "lint:fix": {
      "outputs": [],
      "cache": false,
      "inputs": [
        ".eslintrc*",
        "**/.eslintrc*",
        "**/src/**/*.{ts,tsx,js,jsx}",
        "*.{js,ts,jsx,tsx}"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
